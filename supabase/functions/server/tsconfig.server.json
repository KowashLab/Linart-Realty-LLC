{
  "compilerOptions": {
    // Включает типы Deno и Web Standard, которые определяют 'Deno'
    "lib": ["deno.ns", "deno.unstable", "ES2022"], 
    
    // Использует модуль TypeScript, совместимый с Deno (ESNext)
    "module": "ESNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Обработка нестандартных импортов Deno (jsr:, локальных .tsx)
    "moduleResolution": "node", 
    "allowImportingTsExtensions": true, 
    "resolveJsonModule": true,

    // Настройки для предотвращения ложных ошибок
    "strict": true,
    "noEmit": true,
    "noUnusedLocals": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "node_modules" 
  ]
}